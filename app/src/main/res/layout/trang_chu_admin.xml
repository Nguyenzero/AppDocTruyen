<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- Main content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/adminLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <!-- Nút mở menu giữ lại -->
        <ImageButton
            android:id="@+id/btnOpenMenu"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Mở menu"
            android:padding="12dp"
            android:src="@drawable/menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvAdminTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trang Admin"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="@id/btnOpenMenu"
            app:layout_constraintStart_toEndOf="@id/btnOpenMenu"
            app:layout_constraintBottom_toBottomOf="@id/btnOpenMenu"
            app:layout_constraintVertical_bias="0.5" />

        <!-- CardView thống kê -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:layout_constraintTop_toBottomOf="@id/btnOpenMenu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvTotalUsers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Người dùng: 100"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvTotalStories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng truyện: 250"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Các nút chức năng -->
        <LinearLayout
            android:id="@+id/btnPanel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardStats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btnManageUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quản lý người dùng"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnManageStories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quản lý truyện"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnApproveStories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duyệt truyện"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:textColor="@android:color/holo_red_dark" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/admin_menu"
         />

</androidx.drawerlayout.widget.DrawerLayout>
